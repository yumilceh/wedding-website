# Wedding Website Performance Configuration
# Use this file if hosting on Apache servers (most shared hosting)

# Enable mod_rewrite for clean URLs
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
</IfModule>

# Enable GZIP compression (reduces file size by 60-70%)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE font/truetype
  AddOutputFilterByType DEFLATE font/opentype
  AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Browser caching (1 month for static assets)
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType image/jpg "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  
  # CSS & JavaScript
  ExpiresByType text/css "access plus 30 days"
  ExpiresByType application/javascript "access plus 30 days"
  ExpiresByType text/javascript "access plus 30 days"
  
  # Fonts
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/x-font-woff "access plus 1 year"
  
  # HTML (shorter cache - check for updates frequently)
  ExpiresByType text/html "access plus 1 hour"
  
  # Default
  ExpiresDefault "access plus 2 days"
</IfModule>

# Set proper cache headers
<FilesMatch "\.(jpg|jpeg|png|gif|webp|css|js|ico|woff|woff2|ttf|svg)$">
  Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

<FilesMatch "\.(html|htm)$">
  Header set Cache-Control "max-age=3600, public"
</FilesMatch>

# Enable HTTP/2 (if supported)
<IfModule mod_http2.c>
  Protocols h2 http/1.1
</IfModule>

# Security headers (bonus)
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Remove ETag (reduces bandwidth)
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None
